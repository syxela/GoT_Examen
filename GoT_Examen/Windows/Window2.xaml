<Window x:Class="GoT_Examen.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoT_Examen"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="imgBackground" ImageSource="/home_image.jpeg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button x:Name="btnEasy" Content="Easy" Margin="10" Click="btnEasy_Click"/>
            <Button x:Name="btnIntermediate" Content="Intermediate" Margin="10" Click="btnIntermediate_Click"/>
            <Button x:Name="btnHard" Content="Hard" Margin="10" Click="btnHard_Click"/>
        </StackPanel>
        <TextBlock x:Name="txtChoice" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="" FontSize="20" FontStyle="Italic" FontWeight="Bold"/>
    </Grid>
</Window>
